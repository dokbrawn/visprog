<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SocketsActivity">

    <EditText
        android:id="@+id/editTextSocketMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Server IP (or leave blank for internal test)"
        android:inputType="text"
        android:text="192.168.0.11" />

    <Button
        android:id="@+id/buttonStartSocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Start ZMQ Test" />

    <TextView
        android:id="@+id/tvSockets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Press the button to start" />

</LinearLayout>
